#!/usr/bin/env bash
mic_status=$(pactl get-source-mute @DEFAULT_SOURCE@ | grep "Mute: yes" -c)
if [ $mic_status -eq 1 ]; then
  pactl set-source-mute @DEFAULT_SOURCE@ 0
  hyprctl notify -1 2000 "rgb(00ff00)" "fontsize:30 Mic Active"
else
  pactl set-source-mute @DEFAULT_SOURCE@ 1
  hyprctl notify -1 2000 "rgb(ff0000)" "fontsize:30 Mic Muted"
fi
