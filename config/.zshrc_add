UnrealEditor() {
  param=""
  if [ ! -f "$1" ]; then
    if [ "$1" != "." ]; then
      echo "Find .uproject in current folder"
      uproject=$(find . -maxdepth 1 -type f -name "*.uproject" -printf "%f\n" | head -n 1)

      if [ -n "$uproject" ]; then
        param=$(realpath "$uproject")
      else
        echo "No .uproject file found in current folder"
      fi
    fi
  else
    # Get file with full path
    param=$(realpath "$1")
  fi
  $UNREAL_ROOT/Engine/Binaries/Linux/UnrealEditor $param
}

UnrealBuild() {
  if [ ! -f "$1" ]; then
    echo "Find .uproject in current folder"
    uproject=$(find . -maxdepth 1 -type f -name "*.uproject" -printf "%f\n" | head -n 1)

    if [ -n "$uproject" ]; then
      1=$uproject
    else
      echo "No .uproject file found in current folder"
      return 1
    fi
  fi

  $UNREAL_ROOT/Engine/Build/BatchFiles/Linux/Build.sh Development Linux -Project="$(pwd)/$1" -TargetType=Editor -Progress -NoHotReloadFromIDE
}

