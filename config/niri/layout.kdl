layout {
  gaps 5
  center-focused-column "always"

  preset-column-widths {
    proportion 0.33333
    proportion 0.5
    proportion 0.66667
  }

  default-column-width { proportion 0.5; }

  focus-ring{
    // off
    width 2
    active-color "#333333"
    inactive-color "#222222"
  }

  border {
    off
  }

  shadow {
    off
  }
}
